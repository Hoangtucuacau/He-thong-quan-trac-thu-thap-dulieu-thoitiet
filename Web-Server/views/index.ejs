    <div class="container pb-3">
      <div class="row">
        <div class="col-6">
          <p class="m-0 text-center">
            Thời gian hiện tại: <span id="date-time"></span>
          </p>
        </div>
        <div class="col-6">
          <p class="m-0 text-center">
            Vị trí: Học viện Công nghệ Bưu chính Viễn thông
          </p>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Nhiệt độ</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị cảm biến đo được</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="temperature_input"></span></p>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị thực tế</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="temperature_api"></span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Độ ẩm</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị cảm biến đo được</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="humidity_input"></span></p>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị thực tế</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="humidity_api"></span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Cường độ ánh sáng</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị cảm biến đo được</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="lux_input"></span></p>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <p class="fw-bold">Độ che phủ của mây</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="cloud_api"></span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Áp suất không khí</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị cảm biến đo được</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="pressure_input"></span></p>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <p class="fw-bold">Giá trị thực tế</p>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <p class="reading"><span id="pressure_api"></span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container py-3">
      <div class="row pt-4">
        <div class="col-4">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center" style="color: #fff">
                    Điều khiển thiết bị
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body" style="height: 287.2px !important">
              <div class="row">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển nhiệt độ
                    </p>
                  </div>
                  <div class="row pt-3">
                    <div class="col-4">
                      <p class="text-center">Tắt</p>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                      <div class="form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="switchtem"
                        />
                      </div>
                    </div>
                    <div class="col-4">
                      <p class="text-center">Bật</p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row pt-3">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển ánh sáng
                    </p>
                  </div>
                  <div class="row pt-3">
                    <div class="col-4">
                      <p class="text-center">Tắt</p>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                      <div class="form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="switchlux"
                        />
                      </div>
                    </div>
                    <div class="col-4">
                      <p class="text-center">Bật</p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row pt-3">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">Kích hoạt</p>
                  </div>
                  <div class="row pt-3">
                    <div class="col-4">
                      <p class="text-center">Tắt</p>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                      <div class="form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="switchactivated"
                        />
                      </div>
                    </div>
                    <div class="col-4">
                      <p class="text-center">Bật</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-4">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center" style="color: #fff">
                    Cài đặt thời gian
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body" style="height: 287.2px !important">
              <div class="row">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển nhiệt độ
                    </p>
                  </div>
                  <div class="row">
                    <div class="input-group mb-3">
                      <input
                        id="hour1"
                        type="number"
                        class="form-control"
                        placeholder="Giờ"
                        min="0"
                        max="23"
                      />
                      <span class="input-group-text">:</span>
                      <input
                        id="minute1"
                        type="number"
                        class="form-control"
                        placeholder="Phút"
                        min="0"
                        max="59"
                      />
                      <span class="input-group-text"></span>
                      <input
                        id="thoigian1"
                        type="number"
                        class="form-control"
                        placeholder="Thời gian"
                        min="0"
                        max="59"
                      />
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển ánh sáng
                    </p>
                  </div>
                  <div class="row">
                    <div class="input-group mb-3">
                      <input
                        id="hour2"
                        type="number"
                        class="form-control"
                        placeholder="Giờ"
                        min="0"
                        max="23"
                      />
                      <span class="input-group-text">:</span>
                      <input
                        id="minute2"
                        type="number"
                        class="form-control"
                        placeholder="Phút"
                        min="0"
                        max="59"
                      />
                      <span class="input-group-text"></span>
                      <input
                        id="thoigian2"
                        type="number"
                        class="form-control"
                        placeholder="Thời gian"
                        min="0"
                        max="59"
                      />
                    </div>
                  </div>
                </div>
              </div>

              <div class="row pt-2">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">Kích hoạt</p>
                  </div>
                  <div class="row pt-3">
                    <div class="col-4">
                      <p class="text-center">Tắt</p>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                      <div class="form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="timeactivated"
                        />
                      </div>
                    </div>
                    <div class="col-4">
                      <p class="text-center">Bật</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-4">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center" style="color: #fff">
                    Cài đặt ngưỡng
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body" style="height: 287.2px !important">
              <div class="row">
                <div class="col">
                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển nhiệt độ
                    </p>
                  </div>
                  <div class="row">
                    <div class="input-group mb-3">
                      <input
                        id="nguongtem"
                        type="number"
                        class="form-control"
                        placeholder="Ngưỡng nhiệt độ"
                        min="0"
                        max="100"
                      />
                    </div>
                  </div>

                  <div class="row">
                    <p class="fw-bold text-center">
                      Thiết bị điều khiển ánh sáng
                    </p>
                  </div>
                  <div class="row">
                    <div class="input-group mb-3">
                      <input
                        id="nguonglux"
                        type="number"
                        class="form-control"
                        placeholder="Ngưỡng cường độ ánh sáng"
                        min="0"
                        max="20000"
                      />
                    </div>
                  </div>
                  <div class="row pt-2">
                    <div class="col">
                      <div class="row">
                        <p class="fw-bold text-center">Kích hoạt</p>
                      </div>
                      <div class="row pt-3">
                        <div class="col-4">
                          <p class="text-center">Tắt</p>
                        </div>
                        <div class="col-4 d-flex justify-content-center">
                          <div class="form-check form-switch">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="nguongactivated"
                            />
                          </div>
                        </div>
                        <div class="col-4">
                          <p class="text-center">Bật</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container py-3">
      <div class="row">
        <div class="col-sm-6 col-lg-6">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Biểu đồ nhiệt độ</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <canvas
                  class="border rounded"
                  id="temperature-chart"
                  style="
                    max-height: 500px;
                    width: 100%;
                    background-color: white;
                  "
                ></canvas>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-lg-6">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Biểu đồ độ ẩm</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <canvas
                  class="border rounded"
                  id="humidity-chart"
                  style="
                    max-height: 500px;
                    width: 100%;
                    background-color: white;
                  "
                ></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container py-3">
      <div class="row">
        <div class="col-sm-6 col-lg-6">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Biểu đồ cường độ ánh sáng</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <canvas
                  class="border rounded"
                  id="lux-chart"
                  style="
                    max-height: 500px;
                    width: 100%;
                    background-color: white;
                  "
                ></canvas>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-lg-6">
          <div class="card">
            <div class="card-header" style="background-color: #d30000">
              <div class="row">
                <div class="col">
                  <h4 class="text-center">Biểu đồ áp suất không khí</h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <canvas
                  class="border rounded"
                  id="pressure-chart"
                  style="
                    max-height: 500px;
                    width: 100%;
                    background-color: white;
                  "
                ></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section>
      <footer class="text-white text-center">
        <div class="text-center p-3 fw-bold" style="background-color: #d30000">
          Hà Nội - 2024
        </div>
      </footer>
    </section>

    <script>
      document
        .getElementById("member-information")
        .addEventListener("click", function () {
          var inforModal = new bootstrap.Modal(
            document.getElementById("information-modal"),
            {
              backdrop: true,
            }
          );
          inforModal.show();
        });
    </script>

    <script src="/public/js/javascript.js"></script>
  </body>
</html>
